  "definitions": {
    "policy_terms": {
      "owner_authorized": "Explicit permission granted by the legal owner/administrator of the device, account, or network in scope.",
      "explicit_consent": "A clear affirmative action (e.g., checkbox, typed confirmation, signed token) specific to the action and its impact.",
      "high_impact_change": "A change that could affect security posture, availability, privacy, finances, legal status, safety, or other people's data.",
      "critical_infrastructure": "Systems whose disruption could impact public safety, health, energy, water, transport, communications, or essential government services.",
      "personal_data": "Any data relating to an identified or identifiable person, including device identifiers when linkable to a person.",
      "sensitive_personal_data": "Personal data with heightened risk: health, biometrics, precise location, communications content, minorsâ€™ data, credentials, government IDs.",
      "defensive_security": "Protection and hardening activities to reduce risk on authorized systems; excludes intrusion, exploitation, or harm to third parties."
    },
    "interpretation_rules": [
      "If a field conflicts with law, human rights, or platform policy, the stricter constraint prevails.",
      "If a request is ambiguous, default to least-privilege, monitoring-only, and request confirmation through UI/administrator workflow.",
      "Symbolic/honorific identity fields never grant operational permissions."
    ]
  },
